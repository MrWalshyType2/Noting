@model Noting.Models.Note

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subtopic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subtopic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AutomaticIdLinking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutomaticIdLinking)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
    </dl>

    <h4>Children i.e. Related Notes</h4>
    <hr />

   @* @foreach (var item in Model.Children) *@
    @foreach (int i in Enumerable.Range(0, Model.Children.Count))
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.Title)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.Title
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.Description)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.Description
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.Topic)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.Topic
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.Subtopic)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.Subtopic
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.AutomaticIdLinking)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.AutomaticIdLinking
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.CreatedAt
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(item => item.LastModified)
            </dt>
            <dd class="col-sm-10">
                @Model.Children.ElementAt(i).Child.LastModified
            </dd>
        </dl>
        <hr />
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
